<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fundoGrupo"
    tools:context="projetofinal.celer.com.br.projetofinal.CadastroDeGrupo.TelaDeCadastroDeGrupoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/telaDeCadastroDeGrupo_tvCadastroDeGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telaDeCadastroDeGrupo_tvCadastroDeGrupo"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:padding="5dp"
                style="@style/label_texto"/>

            <TextView
                android:id="@+id/telaDeCadastroDeGrupo_tvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telaDeCadastroDeGrupo_tvId"
                style="@style/label_texto"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/telaDeCadastroDeGrupo_edtId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/label_texto"
                android:inputType="textPersonName"
                android:text="@string/telaDeCadastroDeGrupo_edtId" />

            <TextView
                android:id="@+id/telaDeCadastroDeGrupo_tvNomeDoGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/label_texto"
                android:text="@string/telaDeCadastroDeGrupo_tvNomeDoGrupo" />

            <EditText
                android:id="@+id/TelaDeCadastroDeGrupo_edtNomeDoGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/TelaDeCadastroDeGrupo_edtNomeDoGrupo" />

            <TextView
                android:id="@+id/telaDeCadastroDeGrupo_tvMonitorResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telaDeCadastroDeGrupo_tvMonitorResponsavel"
                style="@style/label_texto"/>

            <EditText
                android:id="@+id/telaDeCadastroDeGrupo_edtMonitorResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/telaDeCadastroDeGrupo_edtMonitorResponsavel"
                style="@style/label_texto"
                />

            <TextView
                android:id="@+id/telaDeCadastroDeGrupo_tvLocalDeAtuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telaDeCadastroDeGrupo_tvLocalDeAtuacao"
                style="@style/label_texto"/>

            <EditText
                android:id="@+id/telaDeCadastroDeGrupo_edtLocalDeAtuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/telaDeCadastroDeGrupo_edtLocalDeAtuacao"
                style="@style/label_texto"/>

            <TextView
                android:id="@+id/telaDeCadastroDeGrupo_tvDescriçãoDeAtividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telaDeCadastroDeGrupo_tvDescriçãoDeAtividades"
                style="@style/label_texto"/>

            <EditText
                android:id="@+id/telaDeCadastroDeGrupo_edtDescricaoDeAtividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/telaDeCadastroDeGrupo_edtDescricaoDeAtividades" />


            <TextView
                android:id="@+id/telaDeCadastroDeGrupo_tvCadastrarUsuaio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/telaDeCadastroDeGrupo_tvCadastrarUsuaio"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                style="@style/label_texto"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
